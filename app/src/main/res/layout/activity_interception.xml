<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterceptionActivity">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="387dp"
        android:layout_height="104dp"
        android:background="#D3D3D3"
        android:padding="12dp"
        android:text="Whilst we cannot recycle our way out of this problem, this offers an economic opportunity to individuals within informal settlements around South Africa."
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="611dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="388dp"
        android:layout_height="86dp"
        android:background="#D3D3D3"
        android:padding="12dp"
        android:text="A crucial first step of our plastic pollution prevention strategy is to work with reclaimers, who are the backbone of recycling in South Africa."
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="518dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/litterboom_logo__2_"
            tools:layout_editor_absoluteX="111dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="331dp"
        android:layout_height="173dp"
        android:background="#D3D3D3"
        android:padding="12dp"
        android:text="As the last line of defence, our River Wardens work tirelessly to ensure that ALL pollution that makes its way into our beautiful rivers and oceans is removed. They play an integral part in restoring these natural eco-systems back to their natural states."
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:fontFamily="sans-serif-black"
        android:text="SUPPORT OUR CAUSE"
        android:textColor="#00FF00"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="255dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="279dp"
        android:layout_height="191dp"
        app:srcCompat="@drawable/image__3_"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="312dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
